    <%- include('partials/header-nav'); -%>



    <div class="container-fluid" data-aos="fade" data-aos-delay="500">
      <div class="row">
        <% featuredStories.forEach((story) => { %>
        <div class="col-lg-4">
          <div class="image-wrap-2">
            <div class="image-info">
              <h2 class="mb-3"><%= story.owner %></h2>
              <a href="/stories/<%=story._id %>" class="btn btn-outline-white py-2 px-4">Read Story</a>
            </div>
            <img src="<%=story.image %>" alt="Image" class="img-fluid">
          </div>
        </div>
       <% }) %>
