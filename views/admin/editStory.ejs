<!DOCTYPE html>
<html lang="en">
<%- include('adminPartials/head'); -%>

<body>
  <div class="container-scroller">
    <!-- partial:../../partials/_horizontal-navbar.html -->
    <%- include('adminPartials/nav'); -%>
        <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Edit Storyk</h4>
                  <form class="forms-sample" action="/admin/story/<%=story._id %>?_method=PATCH" method="post">
                     <div class="form-group">
                      <label for="exampleInputName1">Owner</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Who the story is about" name="owner" required style="padding: 0.55rem"
                      value="<%= story.owner %>">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputCity1">Cover Image</label>
                      <input type="text" class="form-control" id="exampleInputCity1" placeholder="Cover Image" name="image" required style="padding: 0.55rem" 
                      value="<%=story.image %>">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputCity1">Text</label>
                      <textarea  class= "form-control" name="story" id="" cols="30" rows="10">
                      <%= story.story %>
                      </textarea>
                    </div>
                     <div class="form-group">
                    <label for="featured">Featured</label>
                    <input type="checkbox" name="featured" 
                    <% if(story.featured == true) {%>
                    checked
                    <%} %>
                    id="featured">                        
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Make Changes</button>
                  </form>
                </div>
              </div>
            </div>
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Delete Book</h4>
                  <form class="forms-sample" action="/admin/story/<%=story._id %>?_method=DELETE" method="post">
                    <input type="hidden" name="bookId" value="<%=story._id%>">
                    <button type="submit" class="btn btn-danger mr-2"> Delete</button>
                    <button class="btn btn-warning mr-2"><a href="/admin/dashboard"> Cancel</a></button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- footer  -->
        <%- include('adminPartials/footer'); -%>
      </div>
    </div>
  </div>
 <%- include('adminPartials/scripts'); -%>
</body>

</html>
