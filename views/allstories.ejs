<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head'); -%>
<body>

  <div class="site-wrap">

  <%- include('partials/header-nav'); -%>



    <div class="site-section"  data-aos="fade">
      <div class="container-fluid">

        <div class="row justify-content-center">

          <div class="col-md-7">
            <div class="row mb-5">
              <div class="col-12 ">
                <h2 class="site-section-heading text-center">All Stories</h2>
              </div>
            </div>
          </div>

        </div>
        <div class="row">
          <% stories.forEach((story) => { %>
        <div class="col-lg-4">
          <div class="image-wrap-2">
            <div class="image-info">
              <h2 class="mb-3"><%= story.owner %></h2>
              <a href="/stories/<%=story._id %>" class="btn btn-outline-white py-2 px-4">Read Story</a>
            </div>
            <img src="<%=story.image %>" alt="Image" class="img-fluid">
          </div>
        </div>
       <% }) %>
        </div>
      </div>
        <div class="btn-sec" style="text-align:center">
          <% if (No > 1 ) { %>
            <a href="/stories?page=<%=No - 1 %>" class="btn gray-btn">Prev Page</a>
          <% } %>
          <% if (No < pages) {%> 
            <a href="/stories?page=<%=No + 1 %>" class="btn gray-btn">Next Page</a>
          <% } %>
        </div>
    </div>
    

    <div class="footer py-4">
      <div class="container-fluid text-center">
        <p>
          <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
